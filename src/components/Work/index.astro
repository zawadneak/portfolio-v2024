---
import { Image } from "astro:assets";

const education = [
  {
    name: "Rocketseat",
    type: "Bootcamp",
    year: "2019",
    image: "/rocketseat.jpg",
    tags: ["ReactJS + NodeJS + React Native"],
  },
  {
    name: "UFPR",
    year: "2019 - 2023",
    image: "/ufpr.png",
    tags: [
      "Analise e Desenvolvimento de Sistemas (2020 - 2023)",
      "Engenharia de Bioprocessos e Biotecnologia (2019)",
    ],
  },
  {
    name: "UTFPR",
    year: "2024",
    image: "/utfpr.png",
    tags: ["Pos Graduacao em Inteligencia Artifical", "Cursando"],
  },
];
---

<div class="py-5">
  <h3
    class="text-2xl font-bold text-center inline-flex items-center justify-center gap-2"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="1em"
      height="1em"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2m-6 0h-4V4h4z"
      ></path>
    </svg>Work Experience
  </h3>

  <div class="grid grid-cols-3">
    {
      education.map((e) => (
        <div class="flex flex-col items-center py-4 gap-1">
          <Image
            src={e.image}
            class="rounded-lg h-[110px] object-cover"
            alt={e.name}
            width={140}
            height={100}
          />

          <span class="flex gap-2 items-center">
            <h4 class="font-semibold">{e.name}</h4>
          </span>
          <div class="badge badge-small">{e.year}</div>
          <small class="m-0 text-xs">{e.type}</small>
          {e.tags.map((val, i) => (
            <p class="text-center text-sm">{val}</p>
          ))}
        </div>
      ))
    }
  </div>
</div>
