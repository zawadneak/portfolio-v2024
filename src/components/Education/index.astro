---
import { Image } from "astro:assets";

const education = [
  {
    name: "Rocketseat",
    type: "Bootcamp",
    year: "2019",
    image: "/rocketseat.jpg",
    tags: ["ReactJS + NodeJS + React Native"],
  },
  {
    name: "UFPR",
    year: "2019 - 2023",
    image: "/ufpr.png",
    tags: [
      "Analise e Desenvolvimento de Sistemas (2020 - 2023)",
      "Engenharia de Bioprocessos e Biotecnologia (2019)",
    ],
  },
  {
    name: "UTFPR",
    year: "2024",
    image: "/utfpr.png",
    tags: ["Pos Graduacao em Inteligencia Artifical", "Cursando"],
  },
];
---

<div class="py-5">
  <h3
    class="text-2xl font-bold text-center inline-flex items-center justify-center gap-2"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="1em"
      height="1em"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M21 5c-1.11-.35-2.33-.5-3.5-.5c-1.95 0-4.05.4-5.5 1.5c-1.45-1.1-3.55-1.5-5.5-1.5S2.45 4.9 1 6v14.65c0 .25.25.5.5.5c.1 0 .15-.05.25-.05C3.1 20.45 5.05 20 6.5 20c1.95 0 4.05.4 5.5 1.5c1.35-.85 3.8-1.5 5.5-1.5c1.65 0 3.35.3 4.75 1.05c.1.05.15.05.25.05c.25 0 .5-.25.5-.5V6c-.6-.45-1.25-.75-2-1m0 13.5c-1.1-.35-2.3-.5-3.5-.5c-1.7 0-4.15.65-5.5 1.5V8c1.35-.85 3.8-1.5 5.5-1.5c1.2 0 2.4.15 3.5.5z"
      ></path>
      <path
        fill="currentColor"
        d="M17.5 10.5c.88 0 1.73.09 2.5.26V9.24c-.79-.15-1.64-.24-2.5-.24c-1.7 0-3.24.29-4.5.83v1.66c1.13-.64 2.7-.99 4.5-.99M13 12.49v1.66c1.13-.64 2.7-.99 4.5-.99c.88 0 1.73.09 2.5.26V11.9c-.79-.15-1.64-.24-2.5-.24c-1.7 0-3.24.3-4.5.83m4.5 1.84c-1.7 0-3.24.29-4.5.83v1.66c1.13-.64 2.7-.99 4.5-.99c.88 0 1.73.09 2.5.26v-1.52c-.79-.16-1.64-.24-2.5-.24"
      ></path>
    </svg>
    Education
  </h3>

  <div class="grid grid-cols-3">
    {
      education.map((e) => (
        <div class="flex flex-col items-center py-4 gap-1">
          <Image
            src={e.image}
            class="rounded-lg h-[110px] object-cover"
            alt={e.name}
            width={140}
            height={100}
          />

          <span class="flex gap-2 items-center">
            <h4 class="font-semibold">{e.name}</h4>
          </span>
          <div class="badge badge-small">{e.year}</div>
          <small class="m-0 text-xs">{e.type}</small>
          {e.tags.map((val, i) => (
            <p class="text-center text-sm">{val}</p>
          ))}
        </div>
      ))
    }
  </div>
</div>
